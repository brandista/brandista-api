# ============================================================================
# BRANDISTA API - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/brandista

# ============================================================================
# REDIS (Optional - for caching and task queue)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# OPENAI API
# ============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================================================
# GOOGLE CUSTOM SEARCH API
# ============================================================================
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# ============================================================================
# STRIPE PAYMENT PROCESSING
# ============================================================================
STRIPE_API_KEY=sk_test_your-stripe-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# ============================================================================
# SENDGRID EMAIL
# ============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
CACHE_TTL=3600
MAX_CACHE_SIZE=100
MAX_RETRIES=3
REQUEST_TIMEOUT=30
DEFAULT_USER_LIMIT=1

# ============================================================================
# SPA & CONTENT FETCH CONFIGURATION
# ============================================================================
SPA_CACHE_TTL=3600
CONTENT_FETCH_MODE=aggressive
CAPTURE_XHR=1
MAX_XHR_BYTES=1048576
BLOCK_HEAVY_RESOURCES=1
COOKIE_AUTO_DISMISS=1
COOKIE_SELECTORS=button[aria-label*='accept'],button:has-text('Accept'),button:has-text('Hyv√§ksy')

# SPA Configuration
SPA_MAX_SCROLL_STEPS=15
SPA_SCROLL_PAUSE_MS=1000
SPA_EXTRA_WAIT_MS=5000
SPA_WAIT_FOR_SELECTOR=

# ============================================================================
# PLAYWRIGHT SETTINGS
# ============================================================================
PLAYWRIGHT_ENABLED=false
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_WAIT_FOR=networkidle

# ============================================================================
# USER AGENT
# ============================================================================
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=20

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
